{
  "extends": [
    "tslint:recommended",
    "tslint-react",
    "tslint-sonarts"
  ],
  "linterOptions": {
    "exclude": [
      "**/*.spec.*",
      "**/*.js"
    ]
  },
  "rules": {
    "align": true,
    "array-type": [
      true,
      "array"
    ],
    "arrow-parens": false,
    "comment-format": [
      true,
      "check-space"
    ],
    "cyclomatic-complexity": true,
    "deprecation": true,
    "encoding": true,
    "import-blacklist": [
      true,
      "firebase",
      "lodash",
      "moment",
      "@material-ui/core",
      "@material-ui/core/Hidden",
      "@material-ui/core/Hidden/Hidden"
    ],
    "interface-over-type-literal": false,
    "interface-name": false,
    "max-line-length": {
      "options": [
        {
          "limit": 120
        }
      ],
      "severity": "warning"
    },
    "max-union-size": [
      true,
      4
    ],
    "member-access": false,
    "member-ordering": {
      "options": [
        {
          "order": "fields-first"
        }
      ],
      "severity": "warning"
    },
    "no-boolean-literal-compare": true,
    "no-console": false,
    "no-duplicate-switch-case": true,
    "no-implicit-dependencies": [
      true,
      [
        "components",
        "features",
        "ui"
      ]
    ],
    "no-import-side-effect": [
      true
    ],
    "no-inferrable-types": [
      true,
      "ignore-params",
      "ignore-properties"
    ],
    "no-invalid-this": [
      true,
      "check-function-in-method"
    ],
    "no-null-keyword": false,
    "no-return-await": true,
    "no-small-switch": false,
    "no-sparse-arrays": true,
    "no-switch-case-fall-through": true,
    "no-this-assignment": [
      true,
      {
        "allow-destructuring": true
      }
    ],
    "no-unbound-method": true,
    "no-unnecessary-class": true,
    "object-literal-key-quotes": [
      true,
      "as-needed"
    ],
    "object-literal-sort-keys": false,
    "one-variable-per-declaration": [
      false
    ],
    "only-arrow-functions": [
      true,
      "allow-declarations"
    ],
    "ordered-imports": [
      true
    ],
    "prefer-const": {
      "severity": "warning"
    },
    "prefer-method-signature": false,
    "prefer-object-spread": true,
    "prefer-switch": true,
    "prefer-template": [
      true,
      "allow-single-concat"
    ],
    "prefer-while": true,
    "quotemark": [
      true,
      "single",
      "jsx-double"
    ],
    "semicolon": [
      true,
      "always"
    ],
    "space-before-function-paren": false,
    "trailing-comma": [
      true,
      {
        "singleline": "never",
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "ignore",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "triple-equals": [
      true,
      "allow-null-check"
    ],
    "type-literal-delimiter": true,
    "typedef": [
      true,
      "parameter",
      "property-declaration"
    ],
    "use-default-type-parameter": true,
    "whitespace": true,
    "jsx-no-bind": true,
    "jsx-no-lambda": false,
    "jsx-no-multiline-js": false
  }
}
